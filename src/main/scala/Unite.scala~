package adwap.android.project

trait Artillerie { val range:(Int,Int) }

trait ArmePrimaire {
  val munition:Int
  val perforation:Int
  val puissance:Int

 }

trait ArmeSecon {
  val puissanceS:Int
  val perforationS:Int
}


  
abstract class Unite(val pos:(Int,Int), val pdv:Int = 100){
  val cout:Int
  val vision:Int
  val coefpdv:Int
}

abstract class Vehicule(override val pos:(Int,Int),override val pdv:Int) extends Unite(pos,pdv){
  val fuel: Int
  val blindage: Int
}

abstract class Infanterie(override val pos:(Int,Int), override val pdv:Int) extends Unite(pos,pdv){
  val protection: Int
}

class Fantassin(override val pos:(Int,Int)) extends Infanterie(pos,pdv) with ArmeSecon{
  val cout = 1000
  val puissanceS = 30
  val protection = 50
}
